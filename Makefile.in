PACKAGE=ltx2htm
DOC=ltx2htm
include ../Makefile.defs

TARGETS=tex.@SO@
LIBPL=	latex2html.pl latex.cmd pl.pl pl.cmd xpce.pl xpce.cmd \
	latex2html.css
LIBDIR=@libdir@/latex2html
bindir=@bindir@

TEXOBJ=	tex.o psfile.o

all:	$(TARGETS)

tex.@SO@:	$(TEXOBJ)
		$(LD) $(LDSOFLAGS) -o $@ $(TEXOBJ) @LIBS@

################################################################
# Installation
################################################################

install:	$(TARGETS)
	mkdir -p $(DESTDIR)$(SOLIBDIR)
	for f in $(TARGETS); do \
	  $(INSTALL_PROGRAM) $$f $(DESTDIR)$(SOLIBDIR); \
	done
	mkdir -p $(DESTDIR)$(PLBASE)/library/latex2html/icons
	for f in $(LIBPL); do \
	  $(INSTALL_DATA) $(srcdir)/$$f $(DESTDIR)$(PLBASE)/library/latex2html; \
	done
	for f in icons/*.gif; do \
	  $(INSTALL_DATA) $(srcdir)/$$f $(DESTDIR)$(PLBASE)/library/latex2html/icons; \
	done

ln-install::
	@$(MAKE) INSTALL_DATA='../ln-install' \
		 INSTALL_PROGRAM='../ln-install' \
		 install

html-install::

################################################################
# CHECK
################################################################

check::

################################################################
# Cleanup
################################################################

clean::
	rm -f *% *~ $(OBJ) $(TARGETS)

distclean: clean
	rm -f Makefile latex2html
	rm -f config.cache config.log config.status config.h

uninstall::
	rm -r $(LIBDIR)
	rm $(bindir)/latex2html
